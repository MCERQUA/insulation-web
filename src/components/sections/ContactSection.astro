<section id="contact" class="py-20 px-4">
  <div class="max-w-4xl mx-auto">
    <div class="glass-dark rounded-3xl p-8 md:p-12">
      <h2 class="text-4xl md:text-5xl font-bold text-center mb-8 text-white">
        Get Your Free Estimate
      </h2>
      
      <p class="text-center text-xl text-clean-white/80 mb-12">
        Contact our specialists for a custom insulation solution tailored to your home
      </p>
      
      <form class="space-y-6" action="/contact" method="post" name="contact-form">
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <label for="firstName" class="block text-sm font-medium text-clean-white/80 mb-2">First Name</label>
            <input 
              type="text" 
              name="firstName"
              id="firstName"
              required
              class="w-full px-4 py-3 rounded-lg bg-white/10 backdrop-blur-md border border-white/20 text-white placeholder-clean-white/50 focus:outline-none focus:border-insulation-blue transition-colors"
              placeholder="John"
            />
          </div>
          <div>
            <label for="lastName" class="block text-sm font-medium text-clean-white/80 mb-2">Last Name</label>
            <input 
              type="text" 
              name="lastName"
              id="lastName"
              required
              class="w-full px-4 py-3 rounded-lg bg-white/10 backdrop-blur-md border border-white/20 text-white placeholder-clean-white/50 focus:outline-none focus:border-insulation-blue transition-colors"
              placeholder="Doe"
            />
          </div>
        </div>
        
        <div>
          <label for="email" class="block text-sm font-medium text-clean-white/80 mb-2">Email</label>
          <input 
            type="email" 
            name="email"
            id="email"
            required
            class="w-full px-4 py-3 rounded-lg bg-white/10 backdrop-blur-md border border-white/20 text-white placeholder-clean-white/50 focus:outline-none focus:border-insulation-blue transition-colors"
            placeholder="john@example.com"
          />
        </div>
        
        <div>
          <label for="phone" class="block text-sm font-medium text-clean-white/80 mb-2">Phone</label>
          <input 
            type="tel" 
            name="phone"
            id="phone"
            class="w-full px-4 py-3 rounded-lg bg-white/10 backdrop-blur-md border border-white/20 text-white placeholder-clean-white/50 focus:outline-none focus:border-insulation-blue transition-colors"
            placeholder="(555) 123-4567"
          />
        </div>
        
        <div>
          <label for="message" class="block text-sm font-medium text-clean-white/80 mb-2">Message</label>
          <textarea 
            rows="4"
            name="message"
            id="message"
            required
            class="w-full px-4 py-3 rounded-lg bg-white/10 backdrop-blur-md border border-white/20 text-white placeholder-clean-white/50 focus:outline-none focus:border-insulation-blue transition-colors resize-none"
            placeholder="Tell us about your home and insulation needs..."
          ></textarea>
        </div>
        
        <button 
          type="submit"
          class="w-full py-4 bg-insulation-blue hover:bg-insulation-blue/90 text-white rounded-full font-semibold text-lg transition-all duration-300 shadow-xl hover:shadow-2xl hover:scale-105"
        >
          Get Your Free Estimate
        </button>
      </form>
    </div>
  </div>
</section>
