---
import ScrollStorySystem from '../ui/ScrollStorySystem.tsx';
import LightRays from '../ui/LightRays.tsx';
---

<section class="hero-section relative min-h-screen overflow-hidden">
  <!-- Main spotlight cone from top-center illuminating entire screen -->
  <div style="width: 100%; height: 100%; position: fixed; top: 0; left: 0; pointer-events: none; z-index: 15;">
    <LightRays 
      raysOrigin="top-center"
      raysColor="#fff8e1"
      raysSpeed={1.2}
      lightSpread={2.5}
      rayLength={3.0}
      followMouse={false}
      mouseInfluence={0.0}
      noiseAmount={0.05}
      distortion={0.02}
      fadeDistance={2.0}
      saturation={1.2}
      className="main-spotlight"
      client:load
    />
  </div>
  
  <!-- Cinematic Story System -->
  <ScrollStorySystem client:load />
</section>
