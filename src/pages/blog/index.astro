---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { formatDate } from '../../utils/formatDate';

// In a real implementation, you would fetch blog posts from a CMS or markdown files
const blogPosts = [
  {
    slug: 'complete-gun-range-insurance-guide',
    title: 'EXPOSED: The Shocking Insurance Gaps That Could Shut Down Your Range Tomorrow',
    excerpt: 'Discover the critical insurance coverage gaps that could bankrupt your gun range overnight. Our comprehensive guide reveals the essential protections every range owner needs.',
    date: new Date('2024-01-20'),
    author: 'Gun Range Insurance Expert Team',
    image: '/images/complete-gun-range-guide.jpg'
  },
  {
    slug: 'understanding-gun-range-insurance',
    title: 'Understanding Gun Range Insurance: A Complete Guide',
    excerpt: 'Learn about the essential insurance coverage every gun range needs to protect their business and customers.',
    date: new Date('2024-01-15'),
    author: 'Insurance Expert',
    image: '/images/gun-range-safety.jpg'
  },
  {
    slug: 'liability-coverage-essentials',
    title: 'Liability Coverage Essentials for Shooting Ranges',
    excerpt: 'Discover the key liability protections that can safeguard your shooting range from potential claims.',
    date: new Date('2024-01-10'),
    author: 'Risk Management Team',
    image: '/images/range-insurance.jpg'
  },
  {
    slug: 'safety-protocols-insurance',
    title: 'How Safety Protocols Impact Your Insurance Rates',
    excerpt: 'Implementing proper safety measures can significantly reduce your insurance premiums while protecting your business.',
    date: new Date('2024-01-05'),
    author: 'Safety Consultant',
    image: '/images/safety-first.jpg'
  }
];

// Sort posts by date (newest first)
const sortedPosts = blogPosts.sort((a, b) => b.date.getTime() - a.date.getTime());
---

<BaseLayout 
  title="Gun Range Insurance Blog - Expert Insights & Tips"
  description="Expert guidance on gun range insurance, safety protocols, and risk management. Get insights from industry professionals on liability coverage, property insurance, and best practices for firearms businesses."
  keywords="gun range insurance blog, shooting range safety, firearms business insurance tips, liability coverage advice, gun range risk management, insurance industry insights"
>
  <div class="min-h-screen bg-gradient-to-br from-tactical-black via-gunmetal to-steel">
    <!-- Hero Section -->
    <section class="pt-32 pb-16 px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-target-red via-safety-orange to-brass bg-clip-text text-transparent">
          Insurance Insights
        </h1>
        <p class="text-xl text-silver max-w-2xl mx-auto">
          Expert guidance on gun range insurance, safety protocols, and risk management from industry professionals.
        </p>
      </div>
    </section>

    <!-- Blog Posts Grid -->
    <section class="px-4 pb-20">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedPosts.map((post) => (
            <article class="group">
              <a href={`/blog/${post.slug}`} class="block">
                <div class="bg-gradient-to-br from-gunmetal/80 to-steel/60 backdrop-blur-sm border border-silver/20 rounded-lg overflow-hidden hover:border-target-red/50 transition-all duration-300 hover:shadow-[0_8px_32px_rgba(231,76,60,0.3)]">
                  <!-- Post Image Placeholder -->
                  <div class="h-48 bg-gradient-to-br from-tactical-black to-gunmetal flex items-center justify-center">
                    <div class="w-16 h-16 rounded-full bg-target-red/20 flex items-center justify-center">
                      <svg class="w-8 h-8 text-target-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                      </svg>
                    </div>
                  </div>
                  
                  <div class="p-6">
                    <div class="flex items-center text-sm text-brass mb-3">
                      <time>{formatDate(post.date)}</time>
                      <span class="mx-2">â€¢</span>
                      <span>{post.author}</span>
                    </div>
                    
                    <h2 class="text-xl font-bold text-white mb-3 group-hover:text-target-red transition-colors">
                      {post.title}
                    </h2>
                    
                    <p class="text-silver text-sm leading-relaxed">
                      {post.excerpt}
                    </p>
                    
                    <div class="mt-4 flex items-center text-target-red text-sm font-medium">
                      Read More
                      <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </div>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>
  </div>
</BaseLayout>